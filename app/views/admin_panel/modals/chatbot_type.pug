#modal_new_edit.modal.fade( aria-hidden='true', data-backdrop="static", data-keyboard="false")
    .modal-dialog.modal-lg
        .modal-content
            .modal-header.bg-dark
                h4.modal-title !{i18n.new_edit}
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
            .modal-body
                br
                label !{i18n.name}
                input(type='text').form-control#in_name
                label !{i18n.description}
                input(type='text').form-control#in_des
                label !{i18n.key}
                select.form-control#in_key
                    option(value="0") Seleccione un tipo
                    option(value=1) Ventas
                    option(value=2) Reserva
                    option(value=3) Soporte
                    option(value=4) Custom



            .modal-footer.justify-content-end
                button.btn.btn-default(type='button', data-dismiss='modal') !{i18n.cancel}
                button.btn.bg-pink(type='button')#save_changes !{i18n.save}
