#modal_new_edit.modal.fade( aria-hidden='true', data-backdrop="static", data-keyboard="false")
    .modal-dialog.modal-lg
        .modal-content
            .modal-header.bg-dark
                h4.modal-title !{i18n.new_edit}
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
            .modal-body
                br
                label !{i18n.name}
                input(type='text').form-control#in_name
                label !{i18n.description}
                textarea(rows='5').form-control#in_description
                label !{i18n.method}
                select.form-control#in_method
                    option(value='GET') GET
                    option(value='POST') POST
                    option(value='PUT') PUT
                    option(value='DELETE') DELETE

                br
                label !{i18n.content}
                textarea#in_content
            .modal-footer.justify-content-end
                button.btn.btn-default(type='button', data-dismiss='modal') !{i18n.cancel}
                button.btn.bg-pink(type='button')#save_changes !{i18n.save}
