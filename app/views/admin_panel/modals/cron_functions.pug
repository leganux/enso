#modal_new_edit.modal.fade( aria-hidden='true', data-backdrop="static", data-keyboard="false")
    .modal-dialog.modal-xl
        .modal-content
            .modal-header.bg-dark
                h4.modal-title !{i18n.new_edit}
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
            .modal-body
                br
                label !{i18n.name}
                input(type='text').form-control#in_name
                label !{i18n.description}
                textarea(rows='5').form-control#in_description
                label !{i18n.minute} (empty, *, Number [0,59])
                input(type='text').form-control#in_minute
                label !{i18n.hour} (empty, *, Number [0,12])
                input(type='text').form-control#in_hour
                label !{i18n.day_of_month} (empty, *, Number [1,30])
                input(type='text').form-control#in_day_of_month
                label !{i18n.day_of_week} (empty, *, Number [1,7])
                input(type='text').form-control#in_day_of_week
                label !{i18n.month_of_year} (empty, *, Number [1,12])
                input(type='text').form-control#in_month_of_year
                br
                .row
                    .col-6
                    .col-6
                        .btn.btn-outline-primary.btn-block#build_cron_string  !{i18n.build_string}
                label !{i18n.cron_string}
                input(type='text', readonly=true ).form-control#in_cron_string
                br
                label !{i18n.content}
                textarea#in_content
            .modal-footer.justify-content-end
                button.btn.btn-default(type='button', data-dismiss='modal') !{i18n.cancel}
                button.btn.bg-pink(type='button')#save_changes !{i18n.save}
