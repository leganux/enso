#modal_new_edit.modal.fade( aria-hidden='true', data-backdrop="static", data-keyboard="false")
    .modal-dialog.modal-lg
        .modal-content
            .modal-header.bg-dark
                h4.modal-title !{i18n.new_edit}
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
            .modal-body
                br
                label !{i18n.url}
                input(type='text').form-control#in_url
                label !{i18n.description}
                input(type='text').form-control#in_description
                label !{i18n.type}
                select.form-control#in_type
                    option(value=-1) !{i18n.choose_one}
                    option(value='admin_panel') !{i18n.admin_panel}
                    option(value='other') !{i18n.other}


            .modal-footer.justify-content-end
                button.btn.btn-default(type='button', data-dismiss='modal') !{i18n.cancel}
                button.btn.bg-pink(type='button')#save_changes !{i18n.save}
