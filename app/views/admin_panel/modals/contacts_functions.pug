#modal_new_edit.modal.fade( aria-hidden='true', data-backdrop="static", data-keyboard="false")
    .modal-dialog.modal-xl
        .modal-content
            .modal-header.bg-dark
                h4.modal-title !{i18n.new_edit}
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
            .modal-body
                br
                label !{i18n.name}
                input(type='text').form-control#in_name
                label !{i18n.email}
                input(type='email').form-control#in_email
                label !{i18n.description}
                textarea(rows='5').form-control#in_description
                label !{i18n.lada} 
                input(type='number').form-control#in_lada
                label !{i18n.phone} 
                input(type='number').form-control#in_phone
                label !{i18n.country} 
                input(type='text').form-control#in_country
                label !{i18n.state} 
                input(type='text').form-control#in_state
                label !{i18n.city} 
                input(type='text').form-control#in_city
                label !{i18n.cp} 
                input(type='number').form-control#in_cp
                label !{i18n.street} 
                input(type='text').form-control#in_street
                label !{i18n.ext_number} 
                input(type='number').form-control#in_ext_number
                label !{i18n.int_number} 
                input(type='number').form-control#in_int_number
                label !{i18n.reference} 
                textarea(rows="5").form-control#in_reference
            .modal-footer.justify-content-end
                button.btn.btn-default(type='button', data-dismiss='modal') !{i18n.cancel}
                button.btn.bg-pink(type='button')#save_changes !{i18n.save}
