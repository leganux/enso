doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        include template/seo
        include template/styles
    body.hold-transition.sidebar-mini.accent-pink
        .wrapper
            include template/nav
            include template/aside
            .content-wrapper
                section.content-header
                    .container-fluid
                        .row.mb-2
                            .col-sm-6
                                h1 !{i18n.admin_permission}
                            |
                            .col-sm-6
                                ol.breadcrumb.float-sm-right
                                    li.breadcrumb-item
                                        a(href=base_admin_path + 'dashboard') !{i18n.home}
                                    |
                                    li.breadcrumb-item.active !{i18n.admin_permission}
                section.content
                    .card
                        .card-header.bg-dark
                            .row
                                .col-12.col-md-10
                                    h3.card-title !{i18n.list_of} !{i18n.admin_permission}
                                .col-12.col-md-2
                                    //button.bg-pink.btn.btn-block#btn_new_element !{i18n.new}

                        .card-body
                            ul.nav.nav-tabs
                                li.nav-item
                                    a.nav-link.active(data-toggle='tab', href='#by_role') !{i18n.by_role}
                                |
                                li.nav-item
                                    a.nav-link(data-toggle='tab', href='#by_admin') !{i18n.by_admin}
                                |

                            #myTabContent.tab-content.bg-white
                                #by_role.tab-pane.fade.show.active
                                    br
                                    .row
                                        .col-12.col-md-4
                                            center
                                                label !{i18n.select_role}
                                        .col-12.col-md-4
                                            select.form-control#sel_by_role
                                                option(value=-1) !{i18n.choose_one}
                                        .col-12.col-md-4
                                            button.btn.btn-block.bg-pink#btn_sel_by_role_all !{i18n.allow_all}
                                            button.btn.btn-block.btn-dark#btn_sel_by_role_none !{i18n.allow_none}
                                    hr
                                    #sp_url_role


                                #by_admin.tab-pane.fade
                                    br
                                    .row
                                        .col-12.col-md-4
                                            center
                                                label !{i18n.select_admin}
                                        .col-12.col-md-4
                                            select.form-control#sel_by_admin
                                                option(value=-1) !{i18n.choose_one}
                                        .col-12.col-md-4
                                            button.btn.btn-block.bg-pink#btn_sel_by_admin_all !{i18n.allow_all}
                                                button.btn.btn-block.btn-dark#btn_sel_by_admin_none !{i18n.allow_none}
                                    hr
                                    #sp_url_admin



                        .card-footer
                            | !{i18n.create_modify_delete}

            include template/footer
            include template/control_bar

        include modals/admin_roles
        include template/params
        include template/scripts
        script.
            $(document).ready(function () {
                $('#menu_admin_permission').addClass('active');
            });
        script(src=core_files_path + 'js/common.js')
        script(src=core_files_path + 'js/admin_permission.js')

