doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        include template/seo
        include template/styles
    body.hold-transition.sidebar-mini.accent-pink
        .wrapper
            include template/nav
            include template/aside
            .content-wrapper
                section.content-header
                    .container-fluid
                        .row.mb-2
                            .col-sm-6
                                h1 !{i18n.catalogue_of} !{i18n.places}
                            |
                            .col-sm-6
                                ol.breadcrumb.float-sm-right
                                    li.breadcrumb-item
                                        a(href=base_admin_path + 'dashboard') !{i18n.home}
                                    |
                                    li.breadcrumb-item.active !{i18n.catalogue_of} !{i18n.places}
                section.content
                    .card
                        .card-header.bg-dark
                            .row
                                .col-12.col-md-10
                                    h3.card-title !{i18n.list_of} !{i18n.countries}
                                .col-12.col-md-2


                        .card-body
                            table.table.table-bordered.table-striped.display.table-hover#datatable
                                thead
                                    tr
                                        th MID
                                        th !{i18n.id}
                                        th !{i18n.sortname}
                                        th !{i18n.name}
                                        th !{i18n.phonecode}
                                        th !{i18n.active}
                                        th !{i18n.date_register}
                                        th !{i18n.date_last_update}


                        .card-footer
                            | !{i18n.create_modify_delete}

                    br
                    .card
                        .card-header.bg-dark
                            .row
                                .col-12.col-md-10
                                    h3.card-title !{i18n.list_of} !{i18n.states}
                                .col-12.col-md-2


                        .card-body
                            table.table.table-bordered.table-striped.display.table-hover#datatable1
                                thead
                                    tr
                                        th MID
                                        th !{i18n.id}
                                        th !{i18n.name}
                                        th !{i18n.country_id}
                                        th !{i18n.active}
                                        th !{i18n.date_register}
                                        th !{i18n.date_last_update}


                        .card-footer
                            | !{i18n.create_modify_delete}

                    br
                    .card
                        .card-header.bg-dark
                            .row
                                .col-12.col-md-10
                                    h3.card-title !{i18n.list_of} !{i18n.cities}
                                .col-12.col-md-2


                        .card-body
                            table.table.table-bordered.table-striped.display.table-hover#datatable2
                                thead
                                    tr
                                        th MID
                                        th !{i18n.id}
                                        th !{i18n.name}
                                        th !{i18n.state_id}
                                        th !{i18n.active}
                                        th !{i18n.date_register}
                                        th !{i18n.date_last_update}


                        .card-footer
                            | !{i18n.create_modify_delete}

            include template/footer
            include template/control_bar


        include template/params
        include template/scripts
        script.
            $(document).ready(function () {
                $('#menu_places').addClass('active');
                $('#menu_catalogs').parent().addClass('menu-open');
            });
        script(src=core_files_path + 'js/common.js')
        script(src=core_files_path + 'js/catalogue_places.js')

